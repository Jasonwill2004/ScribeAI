{
  "name": "scribe-ai",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:app\" \"npm run dev:socket\"",
    "dev:app": "npm run dev --workspace=apps/web",
    "dev:socket": "npm run dev --workspace=apps/api-socket",
    "build": "npm run build --workspaces",
    "build:app": "npm run build --workspace=apps/web",
    "build:socket": "npm run build --workspace=apps/api-socket",
    "start": "concurrently \"npm run start:app\" \"npm run start:socket\"",
    "start:app": "npm run start --workspace=apps/web",
    "start:socket": "npm run start --workspace=apps/api-socket",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "db:push": "prisma db push",
    "db:reset": "prisma migrate reset"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "concurrently": "^8.2.2",
    "prettier": "^3.1.0",
    "prisma": "^5.22.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "@prisma/client": "^5.22.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
